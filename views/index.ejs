<!doctype html>
<html>
<head>
	<title>Socket.IO chat</title>
	<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
	<script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
	<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
</head>
<body>

	<div class="row">
		<div class="col-md-2 col-md-offset-1" style="text-decoration: capitalize;font-size: 20px">
			<%=: username | capitalize %>
		</div>
		<div class="col-md-6" style="text-align: right;">
			<a href="/logout">Logout</a>
		</div>
	</div>
	<br />
	<div class="row">
		<div class="col-md-8 col-md-offset-1 col-xs-8 col-xs-offset-1">
			<ul id="messages"></ul>
			<span id="notifyUser"></span>
		</div>
		<div class="col-md-3 col-xs-3">
			<ul id="activity"></ul>
		</div>
	</div>
	<div id="input_message">
		<input id="m" autocomplete="off" name="content" placeholder="Press enter to send message" />
	</div>
	<script type="text/javascript">
		var socket = io();
		var username = '<%= username %>';
		socket.emit('chat_data');
		socket.on('chat_data',function(messages){
			for(i=messages.length-1; i>=0;i--){
			if(messages[i].username === username){
				$('#messages').append($('<li class="self">').text(messages[i].username + " : " + messages[i].content));
			}else{
				$('#messages').append($('<li class="other">').text(messages[i].username + " : " + messages[i].content));	
			}
		}
		});
		//var fromuser = '<%= username %>';
		$('#m').keyup(function(e){
			if(e.keyCode == 13){
				var content = $('#m').val();
				var message = {fromuser:username,content:content} 
				socket.emit('chat message', message);
				$('#m').val('').focus();
				return false;
			}else{
				socket.emit('notifyUser',username);
			}
		});
		socket.emit("name",username);
		socket.on("join_room",function(name){
			$('#activity').append($('<li>').text(name + ' joined the room'));
		});
		socket.on("leave_room",function(name){
			$('#activity').append($('<li>').text(name + ' left the room'));
		});
		socket.on('chat message', function(messagedata){
			if(messagedata.username === username){
				$('#messages').append($('<li class="self">').text(messagedata.username + " : " + messagedata.content));
			}else{
				$('#messages').append($('<li class="other">').text(messagedata.username + " : " + messagedata.content));	
			}
		});
		socket.on('notifyUser', function(useristyping){
			
			$('#notifyUser').text(useristyping + ' is typing ...');
			
			setTimeout(function(){ $('#notifyUser').text(''); }, 5000);
		});
	</script>

</body>
</html>